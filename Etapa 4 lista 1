//Etapa 4

#include <stdio.h>

int main() 
{
   printf("10. Exiba os números de 1 a 100.\n");

   int i;
   for (i = 1; i <= 100; i++) {
      if (i < 100)
         printf("%d, ", i);
      else
         printf("%d\n", i); // evita vírgula depois do 100
   }

   printf("\n11. Tabuada de 1 a 10 usando for.\n");

   int a, b;
   for (a = 1; a <= 10; a++) {
      for (b = 1; b <= 10; b++) {
         int multi = a * b;
         printf("%d x %d = %d\n", a, b, multi);
      }
      printf("\n"); // separa cada tabuada
   }

   int num, soma = 0;

    printf("12. Receba números até que o usuário digite 0, e calcule a soma total.\n");

    do {
        printf("Digite um número para soma // digite 0 para sair: ");
        scanf("%d", &num);
        soma += num;  // acumula na soma
    } while (num != 0);

    printf("A soma total é: %d\n", soma);

   return 0;
}
