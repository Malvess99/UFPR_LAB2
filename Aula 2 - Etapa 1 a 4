/*1. Crie um progarama que inclua seu nome sua idade e seu curso*/
#include <stdio.h>

void exercicio1 () {
    char nome[50];
    int idade;
    char curso[50];

    printf("Digite seu nome: ");
    fgets(nome, sizeof(nome), stdin);
    
    printf("Digite sua idade: ");
    scanf("%d", &idade);
    while (getchar() != '\n'); // limpa o buffe

    printf("Qual o seu curso: ");
    fgets(curso, sizeof(curso), stdin);

    printf("Você tem %d anos.\n", idade);
    printf("Seu nome é %s.\n", nome);
    printf("E você cursa %s.\n", curso);
    printf("As informações estão corretas?\n");
}

